float cNoise(vec3 p) {
  
  float x = snoise(p-1.);
  float y = snoise(p+1.);
  vec2 d = vec2(x,y);
  float m_x = (u_mouse.x * .00025);
  float m_y = abs(u_mouse.y * .001);
  vec2 pol = vec2(length(d - m_x), atan(d.y, d.x));
  
  float r = snoise(p+vec3(pol, p.z));
  
  return r;
}


